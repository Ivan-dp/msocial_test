- var goods = [{img: require('/src/img/goods1.webp'), desc: 'Лёгкий, брусок', price: '180 г'}, {img: require("/src/img/goods2.webp"), desc: "Лёгкий, слайсы", price: "120, 225 г"}, {img: require("/src/img/goods3.webp"), desc: "Сливочный, брусок", price: "200, 300 г"}, {img: require("/src/img/goods4.webp"), desc: "Сливочный, слайсы", price: "130, 250 г"}]
.action-goods 
    .container
        h1.action-goods__title В акции участвуют
        .swiper
            .swiper-wrapper
                each good in goods           
                    +card(good.img, good.desc, 'swiper-slide', good.price)(class= 'swiper-slide hover')
            .swiper-pagination 
            .swiper-button-prev
            .swiper-button-next
